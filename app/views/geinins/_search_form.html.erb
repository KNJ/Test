<div class="search-form-container">
  <div class="search-form-inner">
    <div class="search-categories">
      <div class="search-label">
        <h2 class="search-label-name"><i class="fas fa-search icon"></i>キーワードで探す</h2>
        <p class="label-border"></p>
      </div>
      <div class="search-form-area">
        <%= form_tag(search_path, method: "get") do %>
          <%= text_field_tag :keyword,"",class: "search-form" %>
        <% end %>
      </div>
      <div class="search-performer-box post-performer">
        <span class="fas fa-chart-line icon"></span>芸人タグ
