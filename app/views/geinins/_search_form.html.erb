            <span>や行</span>
            <span class="tag-count"><%= @counts[7] %></span>
          <% end %>
          <%= link_to search_geinins_path(:index => 'ra'), :class => "btn geinin-index pink" do %>
            <span>ら行</span>
            <span class="tag-count"><%= @counts[8] %></span>
          <% end %>
          <%= link_to search_geinins_path(:index => 'wa'), :class => "btn geinin-index pink" do %>
            <span>わ行</span>
            <span class="tag-count"><%= @counts[9]  %></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>