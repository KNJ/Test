<div class="search-form-container">
  <div class="search-form-inner">
    <div class="search-geinin-index">
      <div class="search-label">
        <h2 class="search-label-name"><i class="fas fa-search icon"></i>キーワードで探す</h2>
        <p class="label-border"></p>
      </div>
      <div class="search-form-area">
        <%= form_tag(search_path, method: "get") do %>
          <%= text_field_tag :keyword,"",:class => "search-form",:placeholder =>"キーワード(例:バナナマン、M-1グランプリ)" %>
        <% end %>
      </div>
      <div class="geinin-tags post-performer">
        <div class="geinin-tags-title">
          <span class="fas fa-chart-line icon"></span>芸人タグ
        </div>
        <% @geinin_tags.each do |tag| %>
        <ul>
          <li><%= link_to tag.tag, search_path(:geinin_tag => tag.tag), :class => "post-performer float-left" %></li>
        </ul>
        <% end %>
      </div>
      <div class="search-categories">
        <div class="search-label">
          <h2 class="search-label-name"><span class="fas fa-search icon"></span>あいうえおで探す</h2>
          <p class="label-border"></p>
        </div>  
        <div class="search-button-box">
          <%= link_to search_geinins_path(:index => 'a'), :class => "btn geinin-index pink" do %>
            <span>あ行</span>
            <span class="tag-count"><%= @counts[0] %></span>
          <% end %>
          <%= link_to search_geinins_path(:index => 'ka'), :class => "btn geinin-index pink" do %>
            <span>か行</span>
            <span class="tag-count"><%= @counts[1] %></span>
          <% end %>
          <%= link_to search_geinins_path(:index => 'sa'), :class => "btn geinin-index pink" do %>
            <span>さ行</span>
            <span class="tag-count"><%= @counts[2] %></span>
          <% end %>
          <%= link_to search_geinins_path(:index => 'ta'), :class => "btn geinin-index pink" do %>
            <span>た行</span>
            <span class="tag-count"><%= @counts[3]  %></span>
          <% end %>
          <%= link_to search_geinins_path(:index => 'na'), :class => "btn geinin-index pink" do %>
            <span>な行</span>
            <span class="tag-count"><%= @counts[4] %></span>
          <% end %>
          <%= link_to search_geinins_path(:index => 'ha'), :class => "btn geinin-index pink" do %>
            <span>は行</span>
            <span class="tag-count"><%= @counts[5] %></span>
          <% end %>
          <%= link_to search_geinins_path(:index => 'ma'), :class => "btn geinin-index pink" do %>
            <span>ま行</span>
            <span class="tag-count"><%= @counts[6] %></span>
          <% end %>
