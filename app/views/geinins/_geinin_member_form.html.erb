  <div class="form-icon">
    <i class="fas fa-tags"></i>
  </div>
  <div class="form">
    <textarea placeholder="タグ (例:芸風(ボケ、ツッコミ)、特技、趣味、逸話などなんでも)" class="event-edit-form form-long" name="geinin[geinin_members_attributes[0][geinin_member_tags_attributes]][0][tag]" id="geinin_geinin_members_attributes_0_geinin_member_tags_attributes_0_tag"><%= @geinin_members_tags %></textarea>
  </div>
