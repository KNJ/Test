      </div>
  </div>
  <div class="form-item">
      <div class="form-icon">
      <i class="fab fa-instagram"></i>
      </div>
      <div class="form">
      <%= member_form.text_field :instagram_id,:placeholder => "Insgram ID",:class => "event-edit-form form-long"  %>
      </div>
  </div>
  <div class="form-item">
      <div class="form-icon">
      <i class="fas fa-pen-nib"></i>
      </div>
      <div class="form">
      <%= member_form.text_field :blog_url,:placeholder => "ブログ URL",:class => "event-edit-form form-long"  %><br>
      </div>
  </div>
<% end %>
