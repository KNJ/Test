    <div class="inner">
      <div class="header-menubar header-navs-left hide-on-screen-small">
        <ul class="nav navbar-nav" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
          <li class="user-menu-button">
            <%= link_to new_event_path do %>
              <i class="fa fa-plus-circle"></i>
              <span>ライブ登録</span>
              <% end %>
          </li>
          <% if user_signed_in? %>
            <li class="user-menu-button">
              <%= link_to schedule_path do %>
                <i class="fas fa-heart"></i>
                <span>参加予定</span>
                <% end %>
