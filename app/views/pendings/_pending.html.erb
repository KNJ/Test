<% if user_signed_in? %>
	<% if event.pending_by?(current_user) %>
	  <li>
	    <%= link_to event_pendings_path(event), method: :delete, id: "pending-button-#{event.id}", remote: true, :protocol => 'https' do %>
	      <i class="fas fa-question-circle" aria-hidden="true" style="color: red;"></i>
	      <%= event.pendings.select("id").count %> 検討中
	    <% end %>
	  </li>
	<% else %>
	  <li>
	    <%= link_to event_pendings_path(event), method: :post, id: "pending-button-#{event.id}", remote: true, :protocol => 'https' do %>
	      <i class="far fa-question-circle" aria-hidden="true"></i>
	      <%= event.pendings.select("id").count %> 検討中
	    <% end %>
	  </li>
	<% end %>
<% else %>
<!--ログインしていない場合、「ログインするといいね機能が使えます」のメッセージを出す-->
	<!--ログインしていない場合、「ログインするといいね機能が使えます」のメッセージを出す-->
	<a id="modal-open" class="button-link">
		<i class="far fa-question-circle" aria-hidden="true"></i> 検討中
	</a>
<% end %>