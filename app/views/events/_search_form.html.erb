<div class="search-form-container hard-shadows">
  <div class="search-form-inner">
    <div class="search-categories">
      <div class="search-label">
        <h2 class="search-label-name"><span class="fas fa-search icon"></span>日付で探す</h2>
      </div>
      <div class="search-button-box">
        <%= link_to search_path(:date => 'today'), :class => "categories pink" do %>
          <span>今日<span>
        <% end %>
        <%= link_to search_path(:date => 'tomorrow'), :class => "categories pink" do %>
          <span>明日</span>
        <% end %>
        <%= link_to search_path(:date => 'next_sat'), :class => "categories pink" do %>
          <span>次の土曜</span>
        <% end %>
        <%= link_to search_path(:date => 'next_sun'), :class => "categories pink" do %>
          <span>次の日曜</span>
        <% end %>
      </div>
      <div class="search-form-area">
        <%= form_tag(search_path, method: "get") do %>
          <%= text_field_tag ':date', '',:type=>"text", :placeholder =>"日付を指定する(カレンダーで選択)", :id=>"SearchCalendar", data: {min_date: 'today'},data:{ provide:'flatpickr' }, class:"search-form" %>
        <% end %>
      </div>
    </div>
    <div class="search-categories">
      <div class="search-label">
        <h2 class="search-label-name"><span class="fas fa-search icon"></span>キーワードで探す</h2>
      </div>
      <div class="search-form-area">
        <%= form_tag(search_path, method: "get") do %>
          <%= text_field_tag :keyword,"",class: "search-form",:placeholder => "キーワード(例:東京03、新宿、大喜利)" %>
        <% end %>
      </div>
      <div class="popular-search-words-box post-performer">
        <div class="popular-search-words-title">
          <span class="fas fa-chart-line icon"></span>人気検索ワード
        </div>
          <ul>
            <li><%= link_to 'きつね',search_path(:performer => 'きつね'), :class => "post-performer" %></li>
            <li><%= link_to 'まんじゅう大帝国', search_path(:performer => 'まんじゅう大帝国'), :class => "post-performer"  %></li>
            <li><%= link_to '卯月', search_path(:performer => '卯月'), :class => "post-performer"  %></li>
            <li><%= link_to 'ランジャタイ', search_path(:performer => 'ランジャタイ'), :class => "post-performer"  %></li>
            <li><%= link_to 'トンツカタン', search_path(:performer => 'トンツカタン'), :class => "post-performer" %></li>
            <li><%= link_to '金属バット', search_path(:performer => '金属バット'), :class => "post-performer"  %></li>
            <li><%= link_to 'Aマッソ', search_path(:performer => 'Aマッソ'), :class => "post-performer"  %></li>
            <li><%= link_to '三四郎', search_path(:performer => '三四郎'), :class => "post-performer"  %></li>
            <li><%= link_to 'ゾフィー', search_path(:performer => 'ゾフィー'), :class => "post-performer"  %></li>
            <li><%= link_to 'うしろシティ', search_path(:performer => 'うしろシティ'), :class => "post-performer"  %></li>                     
          </ul>    
      </div>
    </div>
    <div class="search-categories">
      <div class="search-label">
        <h2 class="search-label-name"><span class="fas fa-search icon"></span>カテゴリで探す</h2>
      </div>  
      <div class="search-button-box">
        <span>
            <%= link_to search_path(:category => '単独ライブ'), :class => "btn categories pink" do %>
              <span>単独ライブ</span>
            <% end %>
        </span>
        <span>
            <%= link_to search_path(:category => '無料'), :class => "btn categories pink" do %>
              <span>無料</span>
            <% end %>
        </span>
        <span>
          <%= link_to search_path(:category => 'エントリー制'), :class => "btn categories pink" do %>
              <span>エントリー制</span>
            <% end %>
        </span>
      </div>
    </div>
  </div>
</div>