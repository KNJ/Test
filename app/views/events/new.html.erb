<h1>新規投稿</h1>
<!-- form_for部分 -->
<%= form_for(@event) do |f| %>

    <h4>開催日</h4>
    <%= f.date_select :live_date %>

    <h4>開演</h4>
    <%= f.time_select :live_start %>

    <h4>タイトル</h4>
    <%= f.text_field :live_name,:placeholder => "タイトル" %>
    <%= f.text_area :live_remarks,:placeholder => "説明" %>
    <%= f.text_field :link_1,:placeholder => "URL" %>
	<%= f.text_field :live_email,:placeholder => "メールアドレス"  %>

    <h4>画像</h4>
	<%= f.attachment_field :image %>

    <%= f.submit 'ライブ登録' %>

<% end %>