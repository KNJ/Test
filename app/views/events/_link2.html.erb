<% if %>
	<% if event.email.present? %>
		<i class="fas fa-envelope"></i>
		<%= mail_to(event.email, name = current_user.name, '予約する') %>
	<% elsif event.tel.present? %>
		<i class="fas fa-phone"></i>
		<%= link_to('予約する', 'tel:'+event.tel) %>
	<% elsif event.how_many_urls? > 0 %>
		<% @events.links.each do |link| %>
			<% if events.how_many_urls?(link) == 1 %>
				<i class="fas fa-ticket-alt" data-fa-transform="rotate-30 up-1" style="font-size:15px; color:#FFFFFF;text-align:right;"　aria-hidden="true"></i>
				<%= link_to '予約する', link.url %>
			<% end %>
		<% end %>
	<% end %>
<% end %>