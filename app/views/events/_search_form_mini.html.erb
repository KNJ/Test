<div class="search-form-container hard-shadows">
  <div class="search-form-inner">
    <div class="search-categories">
      <div class="search-label">
        <span><h2><span class="fas fa-search icon"></span>日付で探す</h2></span>
        <p class="label-border"></p>
      </div>
      <div class="search-button-box">
        <span><%= link_to '今日', search_path(:date => 'today'), :class => "btn categories pink" %></span>
        <span><%= link_to '明日', search_path(:date => 'tomorrow'), :class => "btn categories pink"  %></span>
        <span><%= link_to '次の土曜', search_path(:date => 'next_sat'), :class => "btn categories pink"  %></span>
        <span><%= link_to '次の日曜', search_path(:date => 'next_sun'), :class => "btn categories pink"  %></span>
      </div>
      <div class="search-form-area">
        <%= form_tag(search_path, method: "get") do %>
          <%= text_field_tag ':date', '',:type=>"text", :placeholder =>"日付を指定する(カレンダーで選択)", :id=>"SearchCalendar", data: {min_date: 'today'},data:{ provide:'flatpickr' }, class:"search-form" %>
        <% end %>
      </div>
    </div>
    <div class="search-categories">
      <div class="search-label">
        <h2 class="search-label-name"><span class="fas fa-search icon"></span>キーワードで探す</h2>
        <p class="label-border"></p>
      </div>
      <div class="search-form-area">
        <%= form_tag(search_path, method: "get") do %>
          <%= text_field_tag :keyword,"",class: "search-form",:placeholder =>"キーワード(例:東京03、新宿、単独ライブ)" %>
        <% end %>
      </div>
    </div>
  </div>
</div>