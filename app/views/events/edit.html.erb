<% @event = @event_info[0] %>
<% @event_performers = @event_info[1] %>

<section class="main">
    <div class="element page-info hard-shadows">
      <p>ライブ編集</p>
    </div>
  <div class="container">
    <div class="event-box">
      <%= form_for(@event) do |f| %>
        <%= render :partial => "event_edit", locals: { event: @event, event_performers: @event_performers, f: f } %>
      <% end %>
    </div>
  </div>
  <div class="delete-box">
  <%= link_to event_path(event.id), method: :delete,
  data: { confirm: "本当に「#{event.title}」を削除してよろしいですか？",
                                                "commit" => "削除する",
                                                "cancel" => "やっぱりやめる",
                                                }, title: "削除の確認"
                                                ,:class=>"btn pink" do %>
    <i class="fas fa-trash-alt"></i>
    <span class="">削除する</span>
  <% end %>
</div>
</section>