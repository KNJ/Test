<section class="main">
  <div class="page-info hard-shadows">
    <p>プロフィール編集</p>
  </div>
    <div class="event-box">
    <%= form_for(@user) do |f| %>
    <div class="form-item">
        <div class="form-icon">
        <i class="fas fa-user"></i>
        </div>
        <div class="form">
        <%= f.text_field :name,:placeholder => "名前 *",:class => "event-edit-form form-long",:required=>"true" %>
        </div>    
    </div>
    <div class="form-item">
        <div class="form-icon">
        <i class="fas fa-file-alt"></i>
        </div>
        <div class="form">
        <%= f.text_area :description,:placeholder => "説明",:class => "event-edit-form form-long",:required=>"true" %>
        </div>    
    </div>
    <div class="form-item">
        <div class="form-icon">
        <i class="fas fa-link"></i>
        </div>
        <div class="form">
        <%= f.text_field :url,:placeholder => "URL",:class => "event-edit-form form-long" %><br>
        </div>
    </div>
    <%= f.submit '登録する！', :class => "btn new pink create-post" %>
    <% end %> 
</section>