<section class="slice slice-lg sct-color-1">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">

            <%= form_for(@user) do |f| %>
                <div class="form-user style-1 rounded has-shadow-1">
                    <div class="form-header text-center">
                        <h2 class="form-header-title">プロフィール編集</h2>
                    </div>
                    <div class="form-body">
                      <form class="mt-20">
                        <div class="form-group has-icon">
                          <label class="control-label sr-only" for="inputName"><%= f.text_field :name %></label>
                          <input type="text" class="form-control" id="inputName" placeholder="名前">
                          <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                        </div>
                        <div class="form-group has-icon">
                          <div class="user-edit-image">
                              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "https://pbs.twimg.com/profile_images/958803950391541760/ABdXMZLE.jpg" %>
                          </div>
                            <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
                            <input type="file">
                        </div>
                        <button type="submit" class="btn btn-lg btn-block btn-base-1 mt-20"><%= f.submit '変更を保存' %></button>
            <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>